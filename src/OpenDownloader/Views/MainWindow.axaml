<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:OpenDownloader.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="using:OpenDownloader.Views"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
        Width="1080" Height="720"
        MinWidth="800" MinHeight="600"
        x:Class="OpenDownloader.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/app_ico.ico"
        Title="OpenDownloader"
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaTitleBarHeightHint="44"
        TransparencyLevelHint="AcrylicBlur"
        Background="Transparent"
        WindowStartupLocation="CenterScreen">

    <Window.KeyBindings>
        <KeyBinding Gesture="Cmd+N" Command="{Binding ShowAddTaskCommand}" />
        <KeyBinding Gesture="Ctrl+N" Command="{Binding ShowAddTaskCommand}" />
        <KeyBinding Gesture="Cmd+," Command="{Binding ShowSettingsCommand}" />
        <KeyBinding Gesture="Ctrl+," Command="{Binding ShowSettingsCommand}" />
    </Window.KeyBindings>

    <Design.DataContext>
        <vm:MainWindowViewModel />
    </Design.DataContext>

    <Window.Resources>
    </Window.Resources>

    <Window.Styles>
        <Style Selector="Button.sidebar">
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="HorizontalContentAlignment" Value="Left" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="Height" Value="40" />
            <Setter Property="CornerRadius" Value="5" />
            <Setter Property="Margin" Value="12,2" />
        </Style>
        <Style Selector="Button.sidebar PathIcon">
            <Setter Property="Width" Value="14" />
            <Setter Property="Height" Value="14" />
        </Style>
        <Style Selector="Button.sidebar:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SystemControlBackgroundBaseLowBrush}" />
        </Style>

        <!-- Hover State (Foreground) - NEW -->
        <Style Selector="Button.sidebar:pointerover TextBlock">
            <Setter Property="Foreground" Value="{DynamicResource SidebarActiveForegroundBrush}" />
        </Style>
        <Style Selector="Button.sidebar:pointerover PathIcon">
            <Setter Property="Foreground" Value="{DynamicResource SidebarActiveForegroundBrush}" />
        </Style>

        <!-- Active State -->
        <Style Selector="Button.sidebar.active">
            <Setter Property="Background" Value="{DynamicResource SystemControlBackgroundBaseLowBrush}" />
        </Style>
        <Style Selector="Button.sidebar.active /template/ ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SystemControlBackgroundBaseLowBrush}" />
        </Style>
        <!-- Active Text/Icon with Theme Support -->
        <Style Selector="Button.sidebar.active TextBlock">
            <Setter Property="Foreground" Value="{DynamicResource SidebarActiveForegroundBrush}" />
            <Setter Property="FontWeight" Value="SemiBold" />
        </Style>
        <Style Selector="Button.sidebar.active PathIcon">
            <Setter Property="Foreground" Value="{DynamicResource SidebarActiveForegroundBrush}" />
            <Setter Property="Width" Value="14" />
            <Setter Property="Height" Value="14" />
        </Style>

        <!-- Dark Theme Overrides -->
        <!-- We use ThemeVariantScope or a class on root to detect dark mode usually, 
             but Avalonia 11 handles it via ResourceDictionaries. 
             Since we can't easily select based on theme variant in CSS-like selectors without a class,
             we rely on DynamicResources that change values.
             
             Let's define a new resource for ActiveForeground.
             But the user wants:
             Dark Mode -> White
             Light Mode -> Accent Color
             
             We should define a resource 'SidebarActiveForeground' in App.axaml and use it here.
        -->

        <!-- ListBoxItem Styles Override -->
        <Style Selector="ListBoxItem">
            <Setter Property="Padding" Value="0" />
            <Setter Property="Margin" Value="0" />
            <Setter Property="Background" Value="Transparent" />
        </Style>
        <Style Selector="ListBoxItem:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="Transparent" />
        </Style>
        <Style Selector="ListBoxItem:selected /template/ ContentPresenter">
            <Setter Property="Background" Value="Transparent" />
        </Style>
        <Style Selector="ListBoxItem:selected:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="Transparent" />
        </Style>
        <Style Selector="ListBoxItem:selected:focus /template/ ContentPresenter">
            <Setter Property="Background" Value="Transparent" />
        </Style>
        <Style Selector="ListBoxItem:selected:pressed /template/ ContentPresenter">
            <Setter Property="Background" Value="Transparent" />
        </Style>

        <!-- Hover Effect on Task Card -->
        <Style Selector="ListBoxItem:pointerover Border.taskCard">
            <Setter Property="BoxShadow" Value="{DynamicResource CardHoverShadow}" />
        </Style>

        <!-- Settings Header Style -->
        <Style Selector="TextBlock.settingsHeader">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Margin" Value="0,0,0,10" />
        </Style>

        <!-- Settings Group Style -->
        <Style Selector="StackPanel.settingsGroup">
            <Setter Property="Spacing" Value="10" />
            <Setter Property="Margin" Value="0,0,0,20" />
        </Style>
    </Window.Styles>

    <Panel>
        <ExperimentalAcrylicBorder IsHitTestVisible="False">
            <ExperimentalAcrylicBorder.Material>
                <ExperimentalAcrylicMaterial
                    BackgroundSource="Digger"
                    TintColor="{DynamicResource SystemChromeMediumColor}"
                    TintOpacity="1"
                    MaterialOpacity="0.65" />
            </ExperimentalAcrylicBorder.Material>
        </ExperimentalAcrylicBorder>

        <SplitView IsPaneOpen="{Binding IsPaneOpen}"
                   DisplayMode="CompactInline"
                   OpenPaneLength="220"
                   CompactPaneLength="64"
                   PaneBackground="Transparent">

            <SplitView.Pane>
                <!-- Add PointerPressed event handler for drag -->
                <Grid RowDefinitions="Auto, *, Auto" Margin="0,0,0,20" Background="Transparent"
                      PointerPressed="Sidebar_PointerPressed">
                    <!-- TitleBar Placeholder in Sidebar (44px height) -->
                    <Grid Grid.Row="0" Height="44" />

                    <StackPanel Grid.Row="1" Spacing="4" Margin="0,10,0,0">
                        <!-- New Task Button -->
                        <Button Command="{Binding ShowAddTaskCommand}"
                                Classes="sidebar"
                                Margin="12,2,12,12">
                            <Grid ColumnDefinitions="40, *">
                                <PathIcon Grid.Column="0" Data="{StaticResource IconAdd}"
                                          VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,1,0,0" />
                                <TextBlock Grid.Column="1" Text="{DynamicResource BtnNewTask}"
                                           VerticalAlignment="Center"
                                           IsVisible="{Binding IsPaneOpen}" />
                            </Grid>
                        </Button>

                        <Button Command="{Binding ShowDownloadingCommand}" Classes="sidebar"
                                Classes.active="{Binding IsDownloading}">
                            <Grid ColumnDefinitions="40, *">
                                <PathIcon Grid.Column="0" Data="{StaticResource IconDownloading}"
                                          VerticalAlignment="Center" HorizontalAlignment="Center"
                                          Margin="0,1,0,0" />
                                <TextBlock Grid.Column="1" Text="{DynamicResource MenuDownloading}"
                                           VerticalAlignment="Center" IsVisible="{Binding IsPaneOpen}" />
                            </Grid>
                        </Button>

                        <Button Command="{Binding ShowWaitingCommand}" Classes="sidebar"
                                Classes.active="{Binding IsWaiting}">
                            <Grid ColumnDefinitions="40, *">
                                <PathIcon Grid.Column="0" Data="{StaticResource IconPause}"
                                          VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,1,0,0" />
                                <TextBlock Grid.Column="1" Text="{DynamicResource MenuWaiting}"
                                           VerticalAlignment="Center" IsVisible="{Binding IsPaneOpen}" />
                            </Grid>
                        </Button>

                        <Button Command="{Binding ShowStoppedCommand}" Classes="sidebar"
                                Classes.active="{Binding IsStopped}">
                            <Grid ColumnDefinitions="40, *">
                                <PathIcon Grid.Column="0" Data="{StaticResource IconStopped}"
                                          VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,1,0,0" />
                                <TextBlock Grid.Column="1" Text="{DynamicResource MenuStopped}"
                                           VerticalAlignment="Center" IsVisible="{Binding IsPaneOpen}" />
                            </Grid>
                        </Button>
                    </StackPanel>

                    <StackPanel Grid.Row="2" Spacing="4">
                        <Button Command="{Binding ShowSettingsCommand}" Classes="sidebar"
                                Classes.active="{Binding IsSettings}">
                            <Grid ColumnDefinitions="40, *">
                                <PathIcon Grid.Column="0" Data="{StaticResource IconSettings}" Width="14" Height="14"
                                          VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,1,0,0" />
                                <TextBlock Grid.Column="1" Text="{DynamicResource MenuSettings}"
                                           VerticalAlignment="Center" IsVisible="{Binding IsPaneOpen}" />
                            </Grid>
                        </Button>
                    </StackPanel>
                </Grid>
            </SplitView.Pane>

            <SplitView.Content>
                <Grid RowDefinitions="52, *">
                    <!-- Title Bar -->
                    <Border Grid.Row="0"
                            Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                            BorderThickness="1,0,0,1"
                            BorderBrush="{DynamicResource SystemControlHighlightBaseLowBrush}"
                            PointerPressed="TitleBar_PointerPressed">
                        <Grid ColumnDefinitions="Auto, *">
                            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center"
                                        Margin="60,0,0,0">
                                <TextBlock Text="{DynamicResource MenuDownloading}" FontSize="18" FontWeight="Bold"
                                           IsVisible="{Binding IsDownloading}" VerticalAlignment="Center" />
                                <TextBlock Text="{DynamicResource MenuWaiting}" FontSize="18" FontWeight="Bold"
                                           IsVisible="{Binding IsWaiting}" VerticalAlignment="Center" />
                                <TextBlock Text="{DynamicResource MenuStopped}" FontSize="18" FontWeight="Bold"
                                           IsVisible="{Binding IsStopped}" VerticalAlignment="Center" />
                                <TextBlock Text="{DynamicResource MenuSettings}" FontSize="18" FontWeight="Bold"
                                           IsVisible="{Binding IsSettings}" VerticalAlignment="Center" />
                            </StackPanel>

                            <!-- Global Controls (Resume All / Pause All / Remove / Refresh) -->
                            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right"
                                        VerticalAlignment="Center" Margin="0,0,20,0" Spacing="8"
                                        IsVisible="{Binding !IsSettingsVisible}">
                                <Button Command="{Binding ResumeAllCommand}"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Padding="8"
                                        ToolTip.Tip="{DynamicResource ToolTipResumeAll}">
                                    <PathIcon Data="{StaticResource IconPlay}" Width="16" Height="16"
                                              Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}" />
                                </Button>
                                <Button Command="{Binding PauseAllCommand}"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Padding="8"
                                        ToolTip.Tip="{DynamicResource ToolTipPauseAll}">
                                    <PathIcon Data="{StaticResource IconPause}" Width="16" Height="16"
                                              Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}" />
                                </Button>
                                <Rectangle Width="1" Height="16"
                                           Fill="{DynamicResource SystemControlHighlightBaseLowBrush}" Margin="4,0" />
                                <Button Command="{Binding DeleteSelectedTasksCommand}"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Padding="8"
                                        ToolTip.Tip="{DynamicResource ToolTipDeleteSelected}">
                                    <PathIcon Data="{StaticResource IconTrash}" Width="16" Height="16"
                                              Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}" />
                                </Button>
                                <Button Command="{Binding RefreshTasksCommand}"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Padding="8"
                                        ToolTip.Tip="{DynamicResource ToolTipRefresh}">
                                    <PathIcon Data="{StaticResource IconRefresh}" Width="16" Height="16"
                                              Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}" />
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Content Area -->
                    <Border Grid.Row="1"
                            Background="{DynamicResource WorkspaceBackgroundBrush}"
                            BorderThickness="1,0,0,0"
                            BorderBrush="{DynamicResource SystemControlHighlightBaseLowBrush}">
                        <TransitioningContentControl Content="{Binding CurrentView}">
                            <TransitioningContentControl.PageTransition>
                                <CrossFade Duration="0:00:00.050" />
                            </TransitioningContentControl.PageTransition>
                        </TransitioningContentControl>
                    </Border>
                </Grid>
            </SplitView.Content>
        </SplitView>

        <!-- Toggle Button Fixed Overlay (Top-Left) -->
        <Button Command="{Binding TogglePaneCommand}"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="75,6,0,0"
                Background="Transparent"
                BorderThickness="0"
                Width="32"
                Height="32"
                HotKey="Ctrl+B">
            <PathIcon Data="{StaticResource IconSidebar}" Width="16" Height="16"
                      Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}" Opacity="0.8" />
        </Button>

        <!-- New Task Overlay -->
        <views:AddTaskView />
    </Panel>
</Window>
