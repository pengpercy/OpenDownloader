<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:OpenDownloader.ViewModels"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="300"
        x:Class="OpenDownloader.Views.AboutWindow"
        x:DataType="vm:MainWindowViewModel"
        Classes="dialog"
        Title="{DynamicResource MenuAbout}"
        Width="400" SizeToContent="Height"
        >

    <Border Classes="dialogRoot">
        <Grid RowDefinitions="Auto, Auto, Auto, Auto" Margin="30">
            <!-- Close Button -->
            <Button Grid.Row="0" Click="OnCloseClick" 
                    HorizontalAlignment="Right" VerticalAlignment="Top"
                    Theme="{StaticResource TransparentButton}" 
                    Padding="8" CornerRadius="4" Margin="0,-10,-10,0">
                <PathIcon Data="{StaticResource IconCancel}" Width="12" Height="12" Opacity="0.6"/>
            </Button>

            <!-- Logo -->
            <Image Grid.Row="1" Source="/Assets/app_ico.ico" Width="80" Height="80" Margin="0,0,0,20"/>

            <!-- App Info -->
            <StackPanel Grid.Row="2" Spacing="8" HorizontalAlignment="Center">
                <TextBlock Text="OpenDownloader" FontWeight="Bold" FontSize="20" HorizontalAlignment="Center"/>
                <StackPanel Orientation="Horizontal" Spacing="4" HorizontalAlignment="Center" Opacity="0.7">
                    <TextBlock Text="{DynamicResource LabelVersion}" FontSize="14"/>
                    <TextBlock Text="{Binding AppVersion}" FontSize="14"/>
                </StackPanel>
                <TextBlock Text="{DynamicResource LabelDescription}" 
                           FontSize="13" Opacity="0.6" HorizontalAlignment="Center" 
                           TextWrapping="Wrap" TextAlignment="Center" Margin="0,10,0,0"/>

                <StackPanel Orientation="Horizontal" Spacing="10" Margin="0,14,0,0" HorizontalAlignment="Center">
                    <PathIcon Data="{StaticResource IconGitHub}" Width="16" Height="16" Opacity="0.75"/>
                    <Button Classes="linkButton" Click="OnRepoLinkClick">
                        <TextBlock Text="{Binding RepositoryUrl}" FontSize="12"/>
                    </Button>
                </StackPanel>
            </StackPanel>

            <!-- Footer -->
            <StackPanel Grid.Row="3" Spacing="10" Margin="0,30,0,0" HorizontalAlignment="Center">
                <TextBlock Text="{DynamicResource LabelCopyright}" FontSize="12" Opacity="0.5" HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
