<views:DialogWindow xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:models="using:OpenDownloader.Models"
        xmlns:conv="using:OpenDownloader.Converters"
        xmlns:views="using:OpenDownloader.Views"
        xmlns:controls="using:OpenDownloader.Controls"
        mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="450"
        x:Class="OpenDownloader.Views.TaskDetailsWindow"
        x:DataType="models:DownloadTask"
        Classes="dialog"
        Title="{DynamicResource MenuDetails}"
        Width="500" SizeToContent="Height">


    <Window.Resources>
        <conv:StatusToIconConverter x:Key="StatusToIconConverter" />
        <conv:ResourceKeyToTextConverter x:Key="ResourceKeyToTextConverter" />
    </Window.Resources>

    <controls:DialogHost Title="{Binding $parent[Window].Title}">
        <Grid RowDefinitions="Auto, Auto">
            <!-- Content -->
            <StackPanel Grid.Row="0" Spacing="16">
                <!-- File Name -->
                <StackPanel Spacing="4">
                    <TextBlock Text="{DynamicResource LabelFileName}" FontSize="12" Opacity="0.6" />
                    <TextBlock Text="{Binding Name}" FontSize="14" FontWeight="Medium" TextWrapping="Wrap" />
                </StackPanel>

                <!-- URL -->
                <StackPanel Spacing="4">
                    <TextBlock Text="{DynamicResource LabelUrl}" FontSize="12" Opacity="0.6" />
                    <TextBox Text="{Binding Url}" IsReadOnly="True" BorderThickness="0" Background="Transparent"
                             Padding="0" TextWrapping="Wrap" FontSize="13" />
                </StackPanel>

                <!-- Save Path -->
                <StackPanel Spacing="4">
                    <TextBlock Text="{DynamicResource LabelSavePath}" FontSize="12" Opacity="0.6" />
                    <TextBlock Text="{Binding FilePath}" FontSize="13" TextWrapping="Wrap" />
                </StackPanel>

                <!-- Stats Grid -->
                <Grid ColumnDefinitions="*, *" RowDefinitions="Auto, Auto, Auto, Auto" Margin="0,4,0,0">
                    <!-- Status -->
                    <StackPanel Grid.Row="0" Grid.Column="0" Spacing="4" Margin="0,0,0,16">
                        <TextBlock Text="{DynamicResource LabelStatus}" FontSize="12" Opacity="0.6" />
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <PathIcon Data="{Binding Status, Converter={StaticResource StatusToIconConverter}}"
                                      Width="14" Height="14" Opacity="0.8" />
                            <TextBlock Text="{Binding Status, Converter={StaticResource ResourceKeyToTextConverter}}"
                                       FontSize="13" />
                        </StackPanel>
                    </StackPanel>

                    <!-- Size -->
                    <StackPanel Grid.Row="0" Grid.Column="1" Spacing="4" Margin="0,0,0,16">
                        <TextBlock Text="{DynamicResource LabelSize}" FontSize="12" Opacity="0.6" />
                        <TextBlock Text="{Binding SizeInfo}" FontSize="13" />
                    </StackPanel>

                    <!-- Speed -->
                    <StackPanel Grid.Row="1" Grid.Column="0" Spacing="4" Margin="0,0,0,16">
                        <TextBlock Text="{DynamicResource LabelSpeed}" FontSize="12" Opacity="0.6" />
                        <TextBlock Text="{Binding Speed}" FontSize="13" />
                    </StackPanel>

                    <!-- Split -->
                    <StackPanel Grid.Row="1" Grid.Column="1" Spacing="4" Margin="0,0,0,16">
                        <TextBlock Text="{DynamicResource LabelSplit}" FontSize="12" Opacity="0.6" />
                        <TextBlock Text="{Binding Split}" FontSize="13" />
                    </StackPanel>

                    <!-- Time Left -->
                    <StackPanel Grid.Row="2" Grid.Column="0" Spacing="4" Margin="0,0,0,16">
                        <TextBlock Text="{DynamicResource LabelTimeRemaining}" FontSize="12" Opacity="0.6" />
                        <TextBlock Text="{Binding TimeLeft}" FontSize="13" />
                    </StackPanel>

                    <!-- Connections -->
                    <StackPanel Grid.Row="2" Grid.Column="1" Spacing="4" Margin="0,0,0,16">
                        <TextBlock Text="{DynamicResource LabelConnections}" FontSize="12" Opacity="0.6" />
                        <TextBlock Text="{Binding Connections}" FontSize="13" />
                    </StackPanel>

                    <!-- GID -->
                    <StackPanel Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Spacing="4">
                        <TextBlock Text="GID" FontSize="12" Opacity="0.6" />
                        <SelectableTextBlock Text="{Binding Id}" FontSize="12" FontFamily="Consolas, Monospace"
                                             Opacity="0.8" />
                    </StackPanel>
                </Grid>

                <!-- Progress Bar -->
                <StackPanel Spacing="4" Margin="0,8,0,0">
                    <Grid ColumnDefinitions="*, Auto">
                        <TextBlock Grid.Column="0" Text="{DynamicResource LabelProgress}" FontSize="12" Opacity="0.6" />
                        <TextBlock Grid.Column="1" Text="{Binding Progress, StringFormat={}{0:P1}}" FontSize="12"
                                   Opacity="0.8" />
                    </Grid>
                    <ProgressBar Value="{Binding Progress}" Maximum="1.0" Height="6" CornerRadius="3" />
                </StackPanel>

            </StackPanel>

            <!-- Footer -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10" Margin="0,24,0,0">
                <Button Content="{DynamicResource ButtonClose}" Click="OnCloseClick"
                        Classes="dialogButton accent" IsCancel="True" IsDefault="True" />
            </StackPanel>
        </Grid>
    </controls:DialogHost>
</views:DialogWindow>
