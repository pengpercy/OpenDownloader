<views:DialogWindow xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:Downio.ViewModels"
        xmlns:views="using:Downio.Views"
        xmlns:controls="using:Downio.Controls"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="300"
        x:Class="Downio.Views.AboutWindow"
        xmlns:localConv="using:Downio.Converters"
        x:DataType="vm:MainWindowViewModel"
        Classes="dialog"
        Title="{DynamicResource MenuAbout}"
        Width="400" SizeToContent="Height"
        >

    <views:DialogWindow.Resources>
        <localConv:ResourceKeyToTextConverter x:Key="ResourceKeyToTextConverter" />
    </views:DialogWindow.Resources>

    <views:DialogWindow.Styles>
        <Style Selector="PathIcon.spin">
            <Setter Property="RenderTransformOrigin" Value="50%,50%" />
            <Style.Animations>
                <Animation Duration="0:0:1" IterationCount="Infinite">
                    <KeyFrame Cue="0%">
                        <Setter Property="RotateTransform.Angle" Value="0" />
                    </KeyFrame>
                    <KeyFrame Cue="100%">
                        <Setter Property="RotateTransform.Angle" Value="360" />
                    </KeyFrame>
                </Animation>
            </Style.Animations>
        </Style>
    </views:DialogWindow.Styles>

    <controls:DialogHost Title="{Binding $parent[Window].Title}">
        <Grid RowDefinitions="Auto, Auto, Auto" Margin="24,10,24,20">
            <!-- App Info with Logo -->
            <StackPanel Grid.Row="1" Spacing="16">
                <StackPanel Orientation="Horizontal" Spacing="20">
                    <Image Source="/Assets/Branding/app_icon.png" Width="64" Height="64" VerticalAlignment="Top"/>
                    <StackPanel Spacing="6" VerticalAlignment="Center">
                        <TextBlock Text="Downio" FontWeight="Bold" FontSize="22"/>
                        <StackPanel Orientation="Horizontal" Spacing="6" Opacity="0.7">
                            <TextBlock Text="{DynamicResource LabelVersion}" FontSize="13"/>
                            <TextBlock Text="{Binding AppVersion}" FontSize="13"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>

                <!-- GitHub Link Row -->
                <StackPanel Orientation="Horizontal" Spacing="10" Margin="0,-4,0,0">
                    <PathIcon Data="{StaticResource IconGitHub}" Width="16" Height="16" Opacity="0.75"/>
                    <Button Classes="linkButton" Click="OnRepoLinkClick">
                        <TextBlock Text="{Binding RepositoryUrl}" FontSize="12"/>
                    </Button>
                </StackPanel>

                <TextBlock Text="{DynamicResource LabelDescription}" 
                           FontSize="13" Opacity="0.7" 
                           TextWrapping="Wrap" LineHeight="20" Margin="0,4,0,0"/>

                <StackPanel Orientation="Horizontal" Spacing="12" Margin="0,10,0,0">
                    <Button IsEnabled="{Binding !IsCheckingForUpdates}" 
                            Command="{Binding CheckForUpdatesCommand}" 
                            CommandParameter="About">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Panel Width="16" Height="16">
                                <PathIcon Data="{StaticResource IconRefresh}" Width="16" Height="16" 
                                          IsVisible="{Binding !IsCheckingForUpdates}"/>
                                <PathIcon Data="{StaticResource IconRefresh}" Width="16" Height="16" 
                                          Classes="spin"
                                          IsVisible="{Binding IsCheckingForUpdates}"/>
                            </Panel>
                            <TextBlock Text="{Binding CheckUpdateButtonKey, Converter={StaticResource ResourceKeyToTextConverter}}" FontSize="13"/>
                        </StackPanel>
                    </Button>

                    <!-- Update check status label -->
                    <TextBlock Text="{Binding UpdateCheckStatusText}" 
                               Foreground="{Binding UpdateCheckStatusBrush}"
                               FontSize="12"
                               VerticalAlignment="Center"
                               IsVisible="{Binding IsUpdateCheckStatusVisible}"
                               Opacity="0.8"/>
                </StackPanel>
            </StackPanel>

            <!-- Footer -->
            <StackPanel Grid.Row="2" Spacing="10" Margin="0,30,0,0">
                <TextBlock Text="{DynamicResource LabelCopyright}" FontSize="11" Opacity="0.4"/>
            </StackPanel>
        </Grid>
    </controls:DialogHost>
</views:DialogWindow>
