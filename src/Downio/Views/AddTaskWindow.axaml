<views:DialogWindow xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:Downio.ViewModels"
        xmlns:views="using:Downio.Views"
        xmlns:controls="using:Downio.Controls"
        mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="400"
        x:Class="Downio.Views.AddTaskWindow"
        x:DataType="vm:MainWindowViewModel"
        Classes="dialog"
        Title="{DynamicResource TitleNewTask}"
        Width="500" SizeToContent="Height"
        >

    <controls:DialogHost Title="{Binding $parent[Window].Title}">
        <Grid RowDefinitions="Auto, Auto">
            <!-- Content -->
            <StackPanel Grid.Row="0" Spacing="16">
                
                <StackPanel Spacing="12">
                    <StackPanel Spacing="8">
                        <TextBlock Text="{DynamicResource LabelUrl}" Opacity="0.7"/>
                        <TextBox Text="{Binding NewTaskUrl}" Watermark="https://..." Height="60" AcceptsReturn="True" TextWrapping="Wrap"/>
                    </StackPanel>

                    <Grid ColumnDefinitions="*, 120" RowDefinitions="Auto, Auto">
                            <StackPanel Grid.Column="0" Spacing="8" Margin="0,0,10,0">
                            <TextBlock Text="{DynamicResource LabelFileName}" Opacity="0.7"/>
                            <TextBox Text="{Binding NewTaskName}" Watermark="{DynamicResource PlaceholderAutoDetected}"/>
                        </StackPanel>

                        <StackPanel Grid.Row="0" Grid.Column="1" Spacing="8">
                            <TextBlock Text="{DynamicResource LabelChunks}" Opacity="0.7"/>
                            <NumericUpDown Value="{Binding NewTaskChunks}" Minimum="1" Maximum="32" FormatString="0"/>
                        </StackPanel>
                    </Grid>

                    <StackPanel Spacing="8">
                        <TextBlock Text="{DynamicResource LabelSavePath}" Opacity="0.7"/>
                        <Grid ColumnDefinitions="*, Auto">
                            <TextBox Grid.Column="0" Text="{Binding NewTaskSavePath}" IsReadOnly="True"/>
                            <Button Grid.Column="1" Command="{Binding ChooseSavePathCommand}" Margin="10,0,0,0">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <PathIcon Data="{StaticResource IconFolder}" Width="16" Height="16" Opacity="0.7"/>
                                    <TextBlock Text="{DynamicResource BtnBrowse}"/>
                                </StackPanel>
                            </Button>
                        </Grid>
                    </StackPanel>
                </StackPanel>
            </StackPanel>

            <!-- Footer -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" Spacing="12" HorizontalAlignment="Right" Margin="0,24,0,0">
                <Button Content="{DynamicResource BtnCancel}" Click="OnCancelClick"
                        Classes="dialogButton" IsCancel="True"/>
                <Button Content="{DynamicResource BtnDownload}" Click="OnDownloadClick"
                        Classes="dialogButton accent" IsDefault="True"/>
            </StackPanel>
        </Grid>
    </controls:DialogHost>
</views:DialogWindow>
