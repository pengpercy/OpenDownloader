<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Downio.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="using:Downio.Views"
        xmlns:localConv="using:Downio.Converters"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
        Width="1080" Height="720"
        MinWidth="800" MinHeight="600"
        x:Class="Downio.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/app_ico.ico"
        Title="Downio"
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaTitleBarHeightHint="52"
        TransparencyLevelHint="AcrylicBlur"
        Background="Transparent"
        WindowStartupLocation="CenterScreen">

    <Window.KeyBindings>
        <KeyBinding Gesture="Cmd+N" Command="{Binding ShowAddTaskCommand}" />
        <KeyBinding Gesture="Ctrl+N" Command="{Binding ShowAddTaskCommand}" />
        <KeyBinding Gesture="Cmd+," Command="{Binding ShowSettingsCommand}" />
        <KeyBinding Gesture="Ctrl+," Command="{Binding ShowSettingsCommand}" />
    </Window.KeyBindings>

    <Design.DataContext>
        <vm:MainWindowViewModel />
    </Design.DataContext>

    <Window.Resources>
    </Window.Resources>

    <Window.Styles>
        <Style Selector="Button.sidebar">
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="HorizontalContentAlignment" Value="Left" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="Height" Value="34" />
            <Setter Property="CornerRadius" Value="5" />
            <Setter Property="Margin" Value="12,2" />
            <Setter Property="Transitions">
                <Transitions />
            </Setter>
        </Style>
        <Style Selector="Button.sidebar PathIcon">
            <Setter Property="Width" Value="16" />
            <Setter Property="Height" Value="16" />
            <Setter Property="Foreground" Value="{DynamicResource SystemControlForegroundAccentBrush}" />
        </Style>
        <Style Selector="Button.sidebar TextBlock">
            <Setter Property="Foreground" Value="{DynamicResource SidebarTextForegroundBrush}" />
        </Style>
        <Style Selector="Button.sidebar /template/ ContentPresenter">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Opacity" Value="1" />
        </Style>
        <Style Selector="Button.sidebar:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SidebarItemHoverBackgroundBrush}" />
            <Setter Property="Opacity" Value="1" />
        </Style>
        <Style Selector="Button.sidebar:pressed /template/ ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SidebarItemHoverBackgroundBrush}" />
            <Setter Property="Opacity" Value="1" />
        </Style>

        <!-- Active State -->
        <Style Selector="Button.sidebar.active /template/ ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SidebarItemSelectedBackgroundBrush}" />
            <Setter Property="Opacity" Value="1" />
        </Style>
        <Style Selector="Button.sidebar.active:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SidebarItemSelectedBackgroundBrush}" />
            <Setter Property="Opacity" Value="1" />
        </Style>
        <Style Selector="Button.sidebar.active:pressed /template/ ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SidebarItemSelectedBackgroundBrush}" />
            <Setter Property="Opacity" Value="1" />
        </Style>
        <Style Selector="Button.sidebar.active TextBlock">
            <Setter Property="Foreground" Value="{DynamicResource SidebarTextForegroundBrush}" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Opacity" Value="1" />
        </Style>

        <!-- Dark Theme Overrides -->
        <!-- ListBoxItem Styles Override -->
        <Style Selector="ListBoxItem">
            <Setter Property="Padding" Value="0" />
            <Setter Property="Margin" Value="0" />
            <Setter Property="Background" Value="Transparent" />
        </Style>
        <Style Selector="ListBoxItem:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="Transparent" />
        </Style>
        <Style Selector="ListBoxItem:selected /template/ ContentPresenter">
            <Setter Property="Background" Value="Transparent" />
        </Style>
        <Style Selector="ListBoxItem:selected:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="Transparent" />
        </Style>
        <Style Selector="ListBoxItem:selected:focus /template/ ContentPresenter">
            <Setter Property="Background" Value="Transparent" />
        </Style>
        <Style Selector="ListBoxItem:selected:pressed /template/ ContentPresenter">
            <Setter Property="Background" Value="Transparent" />
        </Style>

        <!-- Hover Effect on Task Card -->
        <Style Selector="ListBoxItem:pointerover Border.taskCard">
            <Setter Property="BoxShadow" Value="{DynamicResource CardHoverShadow}" />
        </Style>

        <!-- Settings Header Style -->
        <Style Selector="TextBlock.settingsHeader">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Margin" Value="0,0,0,10" />
        </Style>

        <!-- Settings Group Style -->
        <Style Selector="StackPanel.settingsGroup">
            <Setter Property="Spacing" Value="10" />
            <Setter Property="Margin" Value="0,0,0,20" />
        </Style>

        <!-- Compact Menu Styles -->
        <Style Selector="MenuFlyoutPresenter">
            <Setter Property="Padding" Value="4" />
            <Setter Property="MinWidth" Value="140" />
        </Style>
        <Style Selector="MenuItem">
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Padding" Value="8,6" />
            <Setter Property="CornerRadius" Value="5" />
            <Setter Property="Margin" Value="2,1" />
            <Setter Property="Background" Value="Transparent" />
        </Style>
        <Style Selector="MenuItem:pointerover /template/ Border#PART_LayoutRoot">
            <Setter Property="Background" Value="{DynamicResource SystemControlBackgroundAccentBrush}" />
            <Setter Property="CornerRadius" Value="5" />
        </Style>
        <Style Selector="MenuItem:pointerover /template/ ContentPresenter#PART_HeaderPresenter">
            <Setter Property="Background" Value="Transparent" />
        </Style>
        <Style Selector="MenuItem:pointerover">
            <Setter Property="Foreground" Value="{DynamicResource SystemControlForegroundChromeWhiteBrush}" />
        </Style>
        <!-- Ensure text color remains unchanged on hover -->
        <Style Selector="MenuItem:pointerover TextBlock">
            <Setter Property="Foreground" Value="{DynamicResource SystemControlForegroundChromeWhiteBrush}" />
        </Style>
        <Style Selector="MenuItem:pointerover /template/ TextBlock#PART_InputGestureText">
            <Setter Property="Foreground" Value="{DynamicResource SystemControlForegroundChromeWhiteBrush}" />
        </Style>

        <!-- Settings Icon Hover Animation -->
        <Style Selector="Button.settingsBtn PathIcon">
            <Setter Property="Transitions">
                <Transitions>
                    <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.3" Easing="CubicEaseOut" />
                </Transitions>
            </Setter>
        </Style>
        <Style Selector="Button.settingsBtn:pointerover PathIcon">
            <Setter Property="RenderTransform" Value="rotate(90deg) scale(1.1)" />
        </Style>
    </Window.Styles>

    <Panel>
        <ExperimentalAcrylicBorder IsHitTestVisible="False">
            <ExperimentalAcrylicBorder.Material>
                <ExperimentalAcrylicMaterial
                    BackgroundSource="Digger"
                    TintColor="{DynamicResource SystemChromeMediumColor}"
                    TintOpacity="1"
                    MaterialOpacity="0.65" />
            </ExperimentalAcrylicBorder.Material>
        </ExperimentalAcrylicBorder>

        <SplitView IsPaneOpen="{Binding IsPaneOpen}"
                   DisplayMode="CompactInline"
                   OpenPaneLength="220"
                   CompactPaneLength="64"
                   PaneBackground="Transparent">

            <SplitView.Pane>
                <!-- Add PointerPressed event handler for drag -->
                <Grid RowDefinitions="Auto, *, Auto" Margin="0" Background="Transparent"
                      PointerPressed="Sidebar_PointerPressed">
                    <ExperimentalAcrylicBorder IsHitTestVisible="False" Grid.RowSpan="3">
                        <ExperimentalAcrylicBorder.Material>
                            <ExperimentalAcrylicMaterial BackgroundSource="Digger"
                                                         TintColor="{DynamicResource SidebarAcrylicTintColor}"
                                                         TintOpacity="{DynamicResource SidebarAcrylicTintOpacity}"
                                                         MaterialOpacity="{DynamicResource SidebarAcrylicMaterialOpacity}" />
                        </ExperimentalAcrylicBorder.Material>
                    </ExperimentalAcrylicBorder>

                    <Border Background="{DynamicResource SidebarBackgroundBrush}" IsHitTestVisible="False" Grid.RowSpan="3" />
                    <!-- TitleBar Placeholder in Sidebar (52px height) -->
                    <Grid Grid.Row="0" Height="52">
                        <Button Command="{Binding TogglePaneCommand}"
                                Background="Transparent"
                                BorderThickness="0"
                                Width="32"
                                Height="32"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Margin="{Binding SidebarToggleMargin}"
                                IsVisible="{Binding IsWindowsLikeLayout}"
                                HotKey="Ctrl+B">
                            <PathIcon Data="{StaticResource IconMenu}" Width="16" Height="16"
                                      Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}" Opacity="0.8" />
                        </Button>
                    </Grid>

                    <StackPanel Grid.Row="1" Spacing="4" Margin="0,10,0,0">
                        <!-- New Task Button -->
                        <Button Command="{Binding ShowAddTaskCommand}"
                                Classes="sidebar"
                                Margin="12,2,12,12">
                            <Grid ColumnDefinitions="40, *">
                                <PathIcon Grid.Column="0" Data="{StaticResource IconAdd}"
                                          VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,1,0,0" />
                                <TextBlock Grid.Column="1" Text="{DynamicResource BtnNewTask}"
                                           VerticalAlignment="Center"
                                           IsVisible="{Binding IsPaneOpen}" />
                            </Grid>
                        </Button>

                        <Button Command="{Binding ShowDownloadingCommand}" Classes="sidebar"
                                Classes.active="{Binding IsDownloading}">
                            <Grid ColumnDefinitions="40, *">
                                <PathIcon Grid.Column="0" Data="{StaticResource IconDownloading}"
                                          VerticalAlignment="Center" HorizontalAlignment="Center"
                                          Margin="0,1,0,0" />
                                <TextBlock Grid.Column="1" Text="{DynamicResource MenuDownloading}"
                                           VerticalAlignment="Center" IsVisible="{Binding IsPaneOpen}" />
                            </Grid>
                        </Button>

                        <Button Command="{Binding ShowWaitingCommand}" Classes="sidebar"
                                Classes.active="{Binding IsWaiting}">
                            <Grid ColumnDefinitions="40, *">
                                <PathIcon Grid.Column="0" Data="{StaticResource IconPause}"
                                          VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,1,0,0" />
                                <TextBlock Grid.Column="1" Text="{DynamicResource MenuWaiting}"
                                           VerticalAlignment="Center" IsVisible="{Binding IsPaneOpen}" />
                            </Grid>
                        </Button>

                        <Button Command="{Binding ShowStoppedCommand}" Classes="sidebar"
                                Classes.active="{Binding IsStopped}">
                            <Grid ColumnDefinitions="40, *">
                                <PathIcon Grid.Column="0" Data="{StaticResource IconStopped}"
                                          VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,1,0,0" />
                                <TextBlock Grid.Column="1" Text="{DynamicResource MenuStopped}"
                                           VerticalAlignment="Center" IsVisible="{Binding IsPaneOpen}" />
                            </Grid>
                        </Button>
                    </StackPanel>

                    <StackPanel Grid.Row="2" Spacing="4" Margin="0,0,0,20">
                        <Button Classes="sidebar settingsBtn" Classes.active="{Binding IsSettings}">
                            <Button.Flyout>
                                <MenuFlyout Placement="Top">
                                    <MenuItem Header="{DynamicResource SettingsAbout}" Command="{Binding ShowAboutCommand}" />
                                    <MenuItem Header="{DynamicResource MenuFeedback}" Command="{Binding OpenFeedbackUrlCommand}" />
                                    <MenuItem Header="{DynamicResource MenuCheckUpdate}" Command="{Binding CheckForUpdatesCommand}" />
                                    <MenuItem Header="{DynamicResource MenuSettings}" Command="{Binding ShowSettingsCommand}" InputGesture="Cmd+," />
                                </MenuFlyout>
                            </Button.Flyout>
                            <Grid ColumnDefinitions="40, *">
                                <PathIcon Grid.Column="0" Data="{StaticResource IconSettings}" Width="14" Height="14"
                                          VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,1,0,0" />
                                <TextBlock Grid.Column="1" Text="{DynamicResource MenuSettings}"
                                           VerticalAlignment="Center" IsVisible="{Binding IsPaneOpen}" />
                            </Grid>
                        </Button>
                    </StackPanel>
                </Grid>
            </SplitView.Pane>

            <SplitView.Content>
                <Grid RowDefinitions="52, *">
                    <!-- Title Bar -->
                    <Border Grid.Row="0"
                            Background="{DynamicResource TitleBarBackgroundBrush}"
                            BorderThickness="1,0,0,1"
                            BorderBrush="{DynamicResource SystemControlHighlightBaseLowBrush}"
                            PointerPressed="TitleBar_PointerPressed">
                        <Grid ColumnDefinitions="Auto, *">
                            <!-- Global Controls (Resume All / Pause All / Remove) -->
                            <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left"
                                        VerticalAlignment="Center" Margin="24,0,0,0">
                                <StackPanel Orientation="Horizontal" IsVisible="{Binding !IsSettingsVisible}"
                                            Margin="{Binding TitleBarToolsMargin}">
                                    <Button Command="{Binding ResumeAllCommand}"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Padding="8"
                                            ToolTip.Tip="{DynamicResource ToolTipResumeAll}">
                                        <PathIcon Data="{StaticResource IconPlay}" Width="16" Height="16"
                                                  Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}" />
                                    </Button>
                                    
                                    <Rectangle Width="1.5" Height="14" VerticalAlignment="Center" 
                                               Fill="{DynamicResource SystemControlForegroundBaseLowBrush}" 
                                               Opacity="0.7" Margin="6,0"/>
                                               
                                    <Button Command="{Binding PauseAllCommand}"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Padding="8"
                                            ToolTip.Tip="{DynamicResource ToolTipPauseAll}">
                                        <PathIcon Data="{StaticResource IconPause}" Width="16" Height="16"
                                                  Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}" />
                                    </Button>

                                    <Rectangle Width="1.5" Height="14" VerticalAlignment="Center" 
                                               Fill="{DynamicResource SystemControlForegroundBaseLowBrush}" 
                                               Opacity="0.7" Margin="6,0"/>

                                    <Button Command="{Binding DeleteSelectedTasksCommand}"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Padding="8"
                                            ToolTip.Tip="{DynamicResource ToolTipDeleteSelected}">
                                        <PathIcon Data="{StaticResource IconTrash}" Width="16" Height="16"
                                                  Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}" />
                                    </Button>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Content Area -->
                    <Border Grid.Row="1"
                            Background="{DynamicResource WorkspaceBackgroundBrush}"
                            BorderThickness="1,0,0,0"
                            BorderBrush="{DynamicResource SystemControlHighlightBaseLowBrush}">
                        <TransitioningContentControl Content="{Binding CurrentView}">
                            <TransitioningContentControl.PageTransition>
                                <CrossFade Duration="0:00:00.050" />
                            </TransitioningContentControl.PageTransition>
                        </TransitioningContentControl>
                    </Border>
                </Grid>
            </SplitView.Content>
        </SplitView>

        <Button Command="{Binding TogglePaneCommand}"
                Background="Transparent"
                BorderThickness="0"
                Width="32"
                Height="32"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="{Binding MacToggleMargin}"
                IsVisible="{Binding IsMacLikeLayout}"
                HotKey="Ctrl+B">
            <PathIcon Data="{StaticResource IconSidebar}" Width="16" Height="16"
                      Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}" Opacity="0.8" />
        </Button>

        <!-- Toast Container -->
        <ItemsControl ItemsSource="{Binding Toasts}" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,20,20">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border Margin="0,10,0,0" Padding="12,10" CornerRadius="6"
                            Background="{DynamicResource CardBackgroundBrush}"
                            BoxShadow="0 4 12 0 #20000000"
                            MinWidth="260" MaxWidth="320">
                        <Border.Styles>
                            <Style Selector="Border">
                                <Style.Animations>
                                    <Animation Duration="0:0:0.3" Easing="CubicEaseOut">
                                        <KeyFrame Cue="0%">
                                            <Setter Property="Opacity" Value="0"/>
                                            <Setter Property="TranslateTransform.Y" Value="20"/>
                                        </KeyFrame>
                                        <KeyFrame Cue="100%">
                                            <Setter Property="Opacity" Value="1"/>
                                            <Setter Property="TranslateTransform.Y" Value="0"/>
                                        </KeyFrame>
                                    </Animation>
                                </Style.Animations>
                            </Style>
                        </Border.Styles>
                        <Grid ColumnDefinitions="Auto, *">
                            <!-- Icon/Color Strip -->
                            <Border Grid.Column="0" Width="4" VerticalAlignment="Stretch" Margin="0,0,12,0" CornerRadius="2">
                                <Border.Background>
                                    <MultiBinding Converter="{x:Static localConv:ToastTypeToBrushConverter.Instance}">
                                        <Binding Path="Type" />
                                    </MultiBinding>
                                </Border.Background>
                            </Border>
                            
                            <StackPanel Grid.Column="1" Spacing="2">
                                <TextBlock Text="{Binding Title}" FontWeight="SemiBold" FontSize="13" />
                                <TextBlock Text="{Binding Message}" FontSize="12" Opacity="0.8" TextWrapping="Wrap" />
                            </StackPanel>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Panel>
</Window>
